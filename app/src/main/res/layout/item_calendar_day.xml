<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarDayCard"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    app:rippleColor="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- هدر روز -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- نام روز (فقط برای نمایش هفته) -->
            <TextView
                android:id="@+id/dayNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="شنبه"
                tools:visibility="visible" />

            <!-- شماره روز -->
            <TextView
                android:id="@+id/dayNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="15" />

            <!-- نشانگر امروز -->
            <View
                android:id="@+id/todayIndicator"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/circle_background"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- لیست کارها -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tasksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:clipToPadding="false"
            android:padding="1dp" />

        <!-- تعداد کارها (فقط برای نمایش) -->
        <TextView
            android:id="@+id/tasksCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="#4CAF50"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="3 کار"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
