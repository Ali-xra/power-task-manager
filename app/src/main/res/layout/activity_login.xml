<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E3A8A"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- لوگو و عنوان -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="48dp">

        <!-- لوگو -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/modern_card_background_improved"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:text="⚡"
            android:textSize="48sp"
            android:layout_marginBottom="24dp" />

        <!-- عنوان اپلیکیشن -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Task Manager"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- زیرنویس -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مدیریت قدرتمند کارها و اهداف"
            android:textColor="#FFFFFF"
            android:alpha="0.8"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- فرم ورود -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- عنوان ورود -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ورود به برنامه"
                android:textColor="#1E293B"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- راهنمای ایمیل -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📧 آدرس ایمیل خود را وارد کنید:"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- فیلد ایمیل -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/modern_edittext_background"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                tools:text="ali@example.com" />

            <!-- دکمه ورود -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#1E3A8A"
                android:text="ورود به برنامه"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- اطلاعات امنیت -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/modern_edittext_background"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔒"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ایمیل شما فقط روی دستگاه ذخیره می‌شود و هیچ‌جا ارسال نخواهد شد"
            android:textColor="#475569"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
