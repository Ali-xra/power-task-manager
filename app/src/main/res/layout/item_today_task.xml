<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modern_card_background_improved"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="3dp">

    <!-- چک‌باکس انجام -->
    <CheckBox
        android:id="@+id/taskCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:buttonTint="#4CAF50"
        android:scaleX="1.1"
        android:scaleY="1.1" />

    <!-- نشانگر اولویت -->
    <View
        android:id="@+id/priorityIndicator"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:background="#2196F3"
        tools:background="#F44336" />

    <!-- اطلاعات کار -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- عنوان کار -->
        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عنوان کار"
            android:textColor="?colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="انجام تمرینات ورزشی صبحگاهی" />

        <!-- نام بخش (اختیاری) -->
        <TextView
            android:id="@+id/taskCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/modern_edittext_background"
            android:backgroundTint="?colorPrimaryContainer"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="سلامتی"
            android:textColor="?colorPrimary"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="🏃 سلامتی"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- وضعیت انجام (اختیاری) -->
    <TextView
        android:id="@+id/statusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="⏳"
        android:textSize="16sp"
        android:alpha="0.6"
        tools:text="✅" />

</LinearLayout>