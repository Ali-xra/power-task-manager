<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evening_background_gradient"
    android:fillViewport="true"
    tools:context=".ui.EveningActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#E8EAF6"
            android:textSize="16sp"
            tools:text="جمعه - 24 اسفند 1403" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="🌙"
            android:textSize="60sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/good_night_greeting"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Main Content Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="400dp">

            <!-- مرحله 1: سوال کلی امتیازدهی روزانه -->
            <LinearLayout
                android:id="@+id/step1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F3E5F5"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/questionTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:text="@string/satisfaction_daily_question"
                            android:textColor="#4A148C"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- SeekBar قدیمی (برای سازگاری عقب‌گرا) - مخفی -->
                        <SeekBar
                            android:id="@+id/ratingSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:max="10"
                            android:min="1"
                            android:progress="5"
                            android:progressTint="#7B1FA2"
                            android:thumbTint="#7B1FA2"
                            android:visibility="gone" />

                        <!-- SeekBar اصلی (فقط این نمایش داده می‌شود) -->
                        <SeekBar
                            android:id="@+id/dailyRatingSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:max="9"
                            android:min="0"
                            android:progress="4"
                            android:progressTint="#7B1FA2"
                            android:thumbTint="#7B1FA2" />

                        <!-- نمایش مقدار -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rating_display_prefix"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/dailyRatingValueTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="#4A148C"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rating_display_suffix"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- مرحله 2: امتیازدهی بخش‌ها -->
            <LinearLayout
                android:id="@+id/step2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F3E5F5"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/category_rating_header"
                            android:textColor="#4A148C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="@string/category_progress_prompt"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- RecyclerView با ارتفاع ثابت تا مشکل اسکرول نداشته باشیم -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesRatingRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <!-- مرحله 3: بررسی کارهای امروز -->
            <LinearLayout
                android:id="@+id/step3Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F3E5F5"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/todays_tasks_evening_header"
                            android:textColor="#4A148C"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="@string/task_completion_prompt"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- لیست کارهای امروز -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/todayTasksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false" />

                <!-- متن کارهای ناتمام -->
                <TextView
                    android:id="@+id/incompleteTasksText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="#FFF3E0"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/transfer_warning_sample"
                    android:textColor="#E65100"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </FrameLayout>

        <!-- دکمه‌های کنترل -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <!-- دکمه برگشت -->
            <Button
                android:id="@+id/previousButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1B9A"
                android:text="@string/previous_action"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- دکمه رد کردن -->
            <Button
                android:id="@+id/skipButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#757575"
                android:text="@string/skip_action"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- دکمه ثبت قدیمی (مخفی) -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1.5"
                android:backgroundTint="#8E24AA"
                android:text="@string/save_rating_action"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- دکمه جدید برای سیستم چندمرحله‌ای -->
            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1.5"
                android:backgroundTint="#8E24AA"
                android:text="@string/next_step_action"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- نوار پیشرفت -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/step1Indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="#8E24AA" />

            <View
                android:id="@+id/step2Indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="#E1BEE7" />

            <View
                android:id="@+id/step3Indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="#E1BEE7" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>