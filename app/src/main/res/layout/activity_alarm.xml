<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alarm_background_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- نمایش تاریخ فعلی -->
    <TextView
        android:id="@+id/currentDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/sample_date_text"
        android:textColor="#E8EAF6"
        android:textSize="16sp" />

    <!-- آیکون آلارم -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="⏰"
        android:textSize="80sp" />

    <!-- عنوان چالش -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/morning_challenge_header"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- کارت محتوا -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F9FA"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- دستورالعمل -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/typing_challenge_prompt"
                android:textColor="#666666"
                android:textSize="16sp" />

            <!-- جمله انگیزشی -->
            <TextView
                android:id="@+id/challengeQuoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_background"
                android:backgroundTint="#E3F2FD"
                android:gravity="center"
                android:minHeight="60dp"
                android:padding="16dp"
                android:text="@string/sample_motivational_quote"
                android:textColor="#1976D2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ورودی کاربر -->
            <EditText
                android:id="@+id/userInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/type_sentence_hint"
                android:minHeight="60dp"
                android:padding="16dp"
                android:textSize="16sp" />

            <!-- پیام بازخورد -->
            <TextView
                android:id="@+id/feedbackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- دکمه‌های کنترل -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/cancel_alarm_action"
            android:textColor="#FFFFFF"
            app:strokeColor="#FFFFFF" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1.5"
            android:backgroundTint="#4CAF50"
            android:text="@string/confirm_alarm_action"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- راهنما -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:gravity="center"
        android:text="@string/typing_accuracy_note"
        android:textColor="#E8EAF6"
        android:textSize="14sp" />

</LinearLayout>