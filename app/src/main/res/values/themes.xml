<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Theme.AlixraPower" parent="Theme.Material3.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- Inverse colors -->
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@color/md_theme_light_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Power.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Power.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Power.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Power.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Power.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Power.Caption</item>

        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Power.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Power.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Power.LargeComponent</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.AlixraPower.NoActionBar" parent="Theme.AlixraPower">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.AlixraPower.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.AlixraPower</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.Power.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Power.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Power.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Power.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.5sp</item>
    </style>

    <style name="TextAppearance.Power.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:letterSpacing">0.25sp</item>
    </style>

    <style name="TextAppearance.Power.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.4sp</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.Power.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Power.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Power.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Power.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Power.MediumComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Power.Body1</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0.1sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.Power.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Power.MediumComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Power.Body1</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0.1sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.Power.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Power.MediumComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Power.Body1</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0.1sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.Power.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.Power.MediumComponent</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Input Styles -->
    <style name="Widget.Power.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.Power.SmallComponent</item>
        <item name="hintTextAppearance">@style/TextAppearance.Power.Caption</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Overlay Themes -->
    <style name="Theme.AlixraPower.AppBarOverlay" parent="ThemeOverlay.Material3.Toolbar.Surface" />
    <style name="Theme.AlixraPower.PopupOverlay" parent="ThemeOverlay.Material3" />

</resources>